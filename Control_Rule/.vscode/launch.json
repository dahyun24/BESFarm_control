{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Debugging",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ControlRule",  // Raspberry Pi에서의 실행 파일 경로
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "build",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  // GDB 경로
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
